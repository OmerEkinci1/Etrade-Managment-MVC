@model IEnumerable<And.Etrade.Core.Model.Entity.Basket>

<table class="table">
    <tr>
        <th>Product</th>
        <th>Quantity</th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Product.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Quantity)
        </td>
        <td>
            @Html.ActionLink("Delete", "Delete", new { id=item.ID })
        </td>
    </tr>
}

</table>
<a href="/Giveorder" class="btn btn-primary"><i class="glyphicon-credit-card"></i>Buy</a>
