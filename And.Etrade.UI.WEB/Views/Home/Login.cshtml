
@{
    ViewBag.Title = "Login";
}
    <style>
        .left {
            width: 220px;
            float: left;
            margin: 5px;
        }

        .right {
            width: 120px;
            float: left;
        }
    </style>
<h2>Login</h2>
<br />
@{ 
    if (ViewBag.Error !=null)
    {
        <div class="alert alert-danger">
            @ViewBag.Error
        </div>
    }
}
<form action="/Member-Login" method="post">
    <div class="left">
        @Html.Label("E-Mail Address:")
    </div>
    <div class="right">
        @Html.TextBox("Email")
    </div>
    <div class="row"></div>
    <div class="left">
        @Html.Label("Your Password:")
    </div>
    <div class="right">
        @Html.Password("Password")
    </div>
    <div class="row"></div>
    <button type="submit">Login</button>
</form>

