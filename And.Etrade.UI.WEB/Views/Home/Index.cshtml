@model List<And.Etrade.Core.Model.Entity.Product>
@{
    ViewBag.Title = "Index";
}

<h3>Last 5 Product</h3>
@{
    foreach(var item in Model)
    {
        <div class="productBox">
            <p class="title"> @item.Name </p>
            <img src="@item.ImageUrl" alt="Alternate Text" />
        </div>
    }
}
<div class="row"></div>
<style>
    .productBox{
        width:200px;
        float:left;
        margin:10px;
        border:2px solid #b9b9b9;
        padding:10px;
    }
    .productBox img{
        width:100%;
    }
    .productBox title {
        font-weight:bold;
        text-align:center;
    }
</style>

